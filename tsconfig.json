{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src",
    "allowJs": false,
    "newLine": "LF",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "lib": ["es2015"]
  },
  "include": ["src/**/*"]
}
