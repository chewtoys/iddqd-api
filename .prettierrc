{
  "tabWidth": 2,
  "printWidth": 80,
  "parser": "typescript",
  "semi": true,
  "trailingComma": "none",
  "singleQuote": false,
  "jsxBracketSameLine": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "parser": "babylon",
        "semi": true,
        "singleQuote": false
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    }
  ]
}
